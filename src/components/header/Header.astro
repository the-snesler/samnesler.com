---
// import NowPlayingIcon from "../components/NowPlayingIcon";
import DarkToggle from '@/components/header/DarkToggle.astro';
import textStyles from '@/styles/text.module.css';
import { Icon } from 'astro-icon/components';

const currentPath = Astro.url.pathname;

const links = [
  { name: 'Home', href: '/', icon: 'lucide:home' },
  { name: 'Guestbook', href: '/#guestbook', icon: 'lucide:book' },
  { name: 'Blog', href: '/posts/', icon: 'lucide:notebook-text' },
  { name: 'Uses', href: '/uses/', icon: 'lucide:gift' }
];
let activeIndex = links.findIndex(link => link.href === currentPath);
---

<header class="fixed top-0 right-0 left-0 z-50 px-3 py-2 text-white">
  <div class="container mx-auto flex flex-row flex-wrap items-center justify-between gap-2 px-4 pt-0 text-black sm:flex-nowrap dark:text-white">
    <!-- <div class="h-12 p-0">
       <a
        href="/"
        class="group grid h-12 w-max place-items-center leading-none"
      >
        <Outline
          width="200"
          height="50"
          fill="currentColor"
          class="col-end-1 row-end-1 text-white opacity-50 transition-opacity group-hover:opacity-100 dark:text-black"
        />
        <Image src={logo} alt="Tsuni logo" class="z-10 col-end-1 row-end-1" loading="eager" width="200" height="50" quality={50} />
      </a>
    </div> -->
    <a
      href="/"
      class:list={[
        'group hover:text-accent flex w-max items-center mt-1 font-mono text-2xl leading-none font-bold tracking-tight text-black dark:text-white',
        textStyles.terminal
      ]}
    >
      <span class="border-accent group-hover:border-b-3">Sam Nesler</span>
    </a>
    <div class="grow"></div>

    <!-- Desktop Navigation (hidden on mobile) -->
    <nav class="hidden sm:block">
      <ul
        class="bg-bkg/30 header-link-group inset-shadow-accent/40 flex h-10 flex-row items-stretch justify-around gap-1 rounded-lg p-0.5 inset-shadow-xs sm:gap-2"
      >
        {
          links.map((link, i) => {
            const isActive = activeIndex === i;
            return (
              <li
                class:list={[
                  'header-link group relative rounded-md shadow-none transition-shadow hover:shadow-lg active:shadow-none dark:after:bg-white',
                  { active: isActive },
                  { 'after:hidden': i === links.length - 1 }
                ]}
              >
                <a
                  href={link.href}
                  class:list={[
                    'inset-shadow-accent flex h-full items-center gap-2 rounded-md px-1 inset-shadow-none transition-[translate,background,box-shadow] group-hover:-translate-y-1.5 group-hover:bg-gray-200 group-hover:inset-shadow-xs group-active:translate-y-0 group-active:bg-gray-300 sm:px-2 dark:group-hover:bg-gray-700 dark:group-active:bg-gray-700',
                    { 'bg-gray-200 dark:bg-gray-700': isActive }
                  ]}
                >
                  {link.icon && <Icon name={link.icon} size={24} class="header-icon" />}
                  <span class="sm:inline">{link.name}</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <!-- Mobile Menu Button (visible only on mobile) -->
    <button
      popovertarget="mobile-menu"
      class="group relative -mt-2 h-12 w-10 cursor-pointer rounded-b-full shadow-none transition-all hover:shadow-lg active:shadow-none sm:hidden"
      aria-label="Open menu"
      id="mobile-menu-button"
    >
      <div
        class="will-change-transform inset-shadow-accent relative mt-2 h-10 w-10 overflow-clip rounded-sm bg-gray-200 p-2 inset-shadow-2xs transition-all group-hover:-translate-y-1.5 group-active:translate-y-0 group-active:bg-gray-300 group-active:inset-shadow-sm dark:bg-gray-700 dark:group-active:bg-gray-600"
      >
        <Icon name="lucide:menu" size={24} />
      </div>
    </button>

    <!-- Mobile Navigation Popover -->
    <div id="mobile-menu" popover class="mobile-nav-popover">
      <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold">Menu</h2>
        <button
          popovertarget="mobile-menu"
          class="flex h-10 w-10 items-center justify-center rounded-md hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="Close menu"
        >
          <Icon name="lucide:x" size={24} />
        </button>
      </div>
      <nav class="p-4">
        <ul class="flex flex-col gap-2">
          {
            links.map((link, i) => {
              const isActive = activeIndex === i;
              return (
                <li>
                  <a
                    href={link.href}
                    class:list={[
                      'flex items-center gap-3 rounded-md px-4 py-3 transition-colors hover:bg-gray-200 dark:hover:bg-gray-700',
                      { 'bg-gray-200 dark:bg-gray-700': isActive }
                    ]}
                  >
                    {link.icon && <Icon name={link.icon} size={24} />}
                    <span class="text-lg">{link.name}</span>
                  </a>
                </li>
              );
            })
          }
        </ul>
      </nav>
    </div>

    <DarkToggle />
  </div>
</header>

<style is:global>
  /* Mobile menu button styling */
  #mobile-menu-button {
    &::before {
      content: '';
      position: absolute;
      top: 0.5rem;
      right: 0;
      bottom: 0;
      left: 0;
      background: var(--color-gray-300);
      border-radius: 100%;
      transition: color 0s 0.075s;
    }
  }
  .dark #mobile-menu-button::before {
    background: var(--color-gray-800);
  }

  /* Icon */
  li.active .header-icon {
    opacity: 1;
    color: var(--color-content);
  }

  li:not(.active) .header-icon {
    opacity: 0.5;
    color: var(--color-accent);
  }

  .group:hover .header-icon {
    opacity: 1;
    color: var(--color-content);
  }

  /* Divider element */
  .header-link::after {
    pointer-events: none;
    content: '';
    position: absolute;
    top: 50%;
    right: calc(-0.25rem - 1px);
    height: 2rem;
    width: 2px;
    transform: translateY(-50%);
    border-radius: 9999px;
    background: var(--color-bkg);
    opacity: 0.5;
    transition: opacity 0.2s ease-in-out;
  }

  .header-link-group:not(:hover) .active.header-link::after,
  .header-link-group:not(:hover) .header-link:has(+ .active.header-link)::after,
  .header-link-group:hover .header-link:hover::after,
  .header-link-group:hover .header-link:has(+ .header-link:hover)::after {
    opacity: 0;
  }

  /* Hover styles */
  .header-link:hover::before {
    background: var(--color-gray-300);
  }
  .dark .header-link:hover::before {
    background: var(--color-gray-800);
  }
  .header-link::before {
    pointer-events: none;
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border-radius: 6px;
    background: transparent;
  }

  /* Hovering the group but not this specific link */
  .header-link-group:hover .header-link:not(:hover) a {
    background: transparent;
    .header-icon {
      color: var(--color-accent);
      opacity: 0.5;
    }
  }
</style>

<script>
  function scrollHeader() {
    const header = document.querySelector('header');
    if (header) {
      if (window.scrollY > 0) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    }
  }
  document.addEventListener('scroll', scrollHeader);

  scrollHeader();
</script>

<style>
  header {
    transition: all 0.2s ease-out;

    &.scrolled {
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
      background: hsl(var(--color-bkg) / 100);
      backdrop-filter: blur(12px);
    }
  }

  /* Mobile Navigation Popover Styles */
  .mobile-nav-popover {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 80vw;
    max-width: 320px;
    margin-left: auto;
    padding: 0;
    border: none;
    background: var(--color-bkg);
    color: var(--color-content);
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.3);
    overflow-y: auto;
    border-radius: 2rem 0 0 2rem;

    /* Popover animations */
    transition:
      translate 0.2s ease-out,
      overlay 0.2s ease-out allow-discrete,
      display 0.2s ease-out allow-discrete;

    translate: 100% 0;
  }

  .mobile-nav-popover:popover-open {
    translate: 0 0;
  }

  /* Smooth entry/exit animations */
  @starting-style {
    .mobile-nav-popover:popover-open {
      translate: 100% 0;
    }
  }

  .mobile-nav-popover::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    transition:
      background 0.3s ease-out,
      backdrop-filter 0.3s ease-out,
      overlay 0.3s ease-out allow-discrete,
      display 0.3s ease-out allow-discrete;
  }

  @starting-style {
    .mobile-nav-popover::backdrop {
      background: rgba(0, 0, 0, 0);
      backdrop-filter: blur(0px);
    }
  }
</style>
